{
	"name": "better-starter",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "biome lint --write app",
		"format": "biome format --write app",
		"check": "biome check --write app",
		"typecheck": "tsc --noEmit",
		"db:generate:dev": "bun --env-file=.env.development run drizzle-kit generate",
		"db:generate:prod": "bun --env-file=.env.production run drizzle-kit generate",
		"db:migrate:dev": "bun --env-file=.env.development run drizzle-kit migrate",
		"db:migrate:prod": "bun --env-file=.env.production run drizzle-kit migrate",
		"db:push:dev": "bun --env-file=.env.development run drizzle-kit push",
		"db:push:prod": "bun --env-file=.env.production run drizzle-kit push",
		"db:studio:dev": "bun --env-file=.env.development run drizzle-kit studio",
		"db:studio:prod": "bun --env-file=.env.production run drizzle-kit studio"
	},
	"dependencies": {
		"@biomejs/biome": "^1.9.4",
		"@hookform/resolvers": "^4.1.3",
		"@libsql/client": "^0.15.1",
		"@radix-ui/react-label": "^2.1.2",
		"@radix-ui/react-navigation-menu": "^1.2.5",
		"@radix-ui/react-slot": "^1.1.2",
		"@t3-oss/env-nextjs": "^0.12.0",
		"better-auth": "^1.2.5",
		"better-sqlite3": "^11.9.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.40.1",
		"lucide-react": "^0.482.0",
		"next": "^15.2.4",
		"next-themes": "^0.4.6",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-hook-form": "^7.54.2",
		"resend": "^4.2.0",
		"tailwind-merge": "^3.0.2",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.0.17",
		"@types/node": "^20.17.28",
		"@types/react": "^19.0.12",
		"@types/react-dom": "^19.0.4",
		"drizzle-kit": "^0.30.6",
		"tailwindcss": "^4.0.17",
		"typescript": "^5.8.2"
	},
	"packageManager": "bun@1.2.5"
}
